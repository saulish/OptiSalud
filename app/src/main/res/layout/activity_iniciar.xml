<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:forceDarkAllowed="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background">


    <TextView
        android:id="@+id/titulo_iniciar"
        android:layout_width="342dp"
        android:layout_height="70dp"
        android:fontFamily="@font/comfortaa_light"
        android:shadowColor="@color/black"
        android:text="Iniciar sesión"
        android:textColorHint="#FFFFFF"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.113" />

    <EditText
        android:id="@+id/curp_iniciar"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginTop="159dp"
        android:autofillHints=""
        android:ems="10"
        android:fontFamily="@font/comfortaa_light"
        android:hint="CURP"
        android:inputType="text"
        android:shadowColor="#000000"
        android:textColor="@color/black"
        android:textColorHint="@color/transparente"
        android:textColorLink="#1E1C1C"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <EditText
        android:id="@+id/nss_iniciar"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa_light"
        android:hint="Numero de Seguro Social"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/transparente"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/curp_iniciar"
        app:layout_constraintVertical_bias="0.145" />

    <Button
        android:id="@+id/enviar_inicio"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/comfortaa_light"
        android:onClick="inicio_entrar_menu"
        android:text="INICIAR SESIÓN"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:iconPadding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nss_iniciar"
        app:layout_constraintVertical_bias="0.206" />

    <TextView
        android:id="@+id/Texto_msj"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:fontFamily="@font/comfortaa"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.313"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.238" />

</androidx.constraintlayout.widget.ConstraintLayout>