<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/principal"
        android:backgroundTint="@color/principal"
        android:fontFamily="@font/comfortaa"
        android:gravity="center_vertical"
        android:text="OptiSalud"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="363dp"
        android:layout_height="482dp"
        android:layout_marginTop="44dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo">

        <TableRow
            android:id="@+id/fila1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/columna1"
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:gravity="center">

                <TableRow
                    android:id="@+id/logo1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/icons"
                    android:gravity="center"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/logo_escanear"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/logo_acta" />
                </TableRow>

            </TableRow>

            <TableRow
                android:id="@+id/columna2"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center|top">

                <TableRow
                    android:id="@+id/logo2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@color/icons"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/logo_consulta"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/logo_busqueda" />
                </TableRow>

            </TableRow>

        </TableRow>

        <TableRow
            android:id="@+id/texto_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/primer"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:id="@+id/texto_escanear"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@color/icons">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/comfortaa"
                        android:text="Escanear receta"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </TableRow>

            </TableRow>

            <TableRow
                android:id="@+id/segundo"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:id="@+id/texto_consulta"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@color/icons">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/comfortaa"
                        android:text="Consulta de medicamentos"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </TableRow>

            </TableRow>

        </TableRow>

        <TableRow
            android:id="@+id/fila2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/columna3"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:gravity="bottom|center">

                <TableRow
                    android:id="@+id/logo3"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@color/icons"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/logo_mapa" />
                </TableRow>
            </TableRow>

            <TableRow
                android:id="@+id/columna4"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:gravity="bottom|center">

                <TableRow
                    android:id="@+id/logo4"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@color/icons"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/logo_telefono" />
                </TableRow>
            </TableRow>
        </TableRow>

        <TableRow
            android:id="@+id/texto_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/tercero"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:id="@+id/texto_entrega"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@color/icons">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/comfortaa"
                        android:text="Entrega a domicilio"
                        android:textAlignment="center"
                        android:textSize="15sp" />
                </TableRow>
            </TableRow>

            <TableRow
                android:id="@+id/cuarto"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:id="@+id/texto_solicitar"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@color/icons">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/comfortaa"
                        android:text="Solicitar asistencia"
                        android:textAlignment="center" />
                </TableRow>
            </TableRow>
        </TableRow>

        <TableRow
            android:id="@+id/fila3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/columna5"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:gravity="bottom|center">

                <TableRow
                    android:id="@+id/logo5"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@color/icons"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/logo_calendario" />
                </TableRow>
            </TableRow>

            <TableRow
                android:id="@+id/columna6"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:gravity="bottom|center">

                <TableRow
                    android:id="@+id/logo6"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@color/icons"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/logo_pregunta" />
                </TableRow>
            </TableRow>
        </TableRow>

        <TableRow
            android:id="@+id/texto_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/quinto"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:id="@+id/texto_recordatorios"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@color/icons">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/comfortaa"
                        android:text="Recordatorios"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </TableRow>
            </TableRow>

            <TableRow
                android:id="@+id/sexto"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:id="@+id/texto_ayuda"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@color/icons">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/comfortaa"
                        android:text="Ayuda"
                        android:textAlignment="center"
                        android:textSize="16sp" />
                </TableRow>
            </TableRow>
        </TableRow>

    </TableLayout>

    <TableRow
        android:id="@+id/logo_inicio"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@color/base"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/logo_inicio" />
    </TableRow>

    <TableRow
        android:id="@+id/logo_ajuste"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@color/base"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/conf_logo"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:onClick="ir_config"
            app:srcCompat="@drawable/logo_ajustes" />
    </TableRow>

    <TableRow
        android:id="@+id/logo_user"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@color/base"
        android:gravity="center"
        android:onClick="ir_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/logo_ajuste"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/logo_usuario" />
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>