<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_background"
    android:textAlignment="center">

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:layout_marginTop="20dp"
        android:gravity="center|top"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo">

        <TableRow
            android:id="@+id/fila1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TableRow
                android:id="@+id/columna1"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:gravity="center">

                <TableRow
                    android:id="@+id/logo1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bordesuperior"
                    android:gravity="center"
                    app:cornerRadius="10dp"

                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/logo_escanear"
                        android:layout_width="105dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/logo_acta" />
                </TableRow>

            </TableRow>

            <TableRow
                android:id="@+id/columna2"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center|top"
                android:onClick="ir_medicamentos"
                tools:ignore="ExtraText">


                <TableRow
                    android:id="@+id/logo2"
                    android:layout_width="150dp"

                    android:layout_height="match_parent"
                    android:background="@drawable/bordesuperior"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/logo_consulta"

                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/logo_busqueda" />
                </TableRow>

            </TableRow>

        </TableRow>

        <TableRow
            android:id="@+id/texto_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">

            <TableRow
                android:id="@+id/primer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:id="@+id/texto_escanear"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bordeinferior">

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:fontFamily="@font/comfortaa"
                        android:text="Escanear receta"
                        android:textAlignment="center"
                        android:textSize="14sp" />
                </TableRow>

            </TableRow>

            <TableRow
                android:id="@+id/segundo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:id="@+id/texto_consulta"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bordeinferior"
                    android:gravity="top"
                    android:onClick="ir_medicamentos"
                    tools:ignore="TouchTargetSizeCheck">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/comfortaa"
                        android:text="Consulta de medicamentos"
                        android:textAlignment="center"
                        android:textSize="12sp" />
                </TableRow>

            </TableRow>

        </TableRow>

    </TableLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="250dp"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titulo">

        <TableRow
            android:id="@+id/fila2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TableRow
                android:id="@+id/columna3"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:gravity="bottom|center">

                <TableRow
                    android:id="@+id/logo3"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@drawable/bordesuperior"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/logo_mapa" />
                </TableRow>
            </TableRow>

            <TableRow
                android:id="@+id/columna4"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:gravity="bottom|center">

                <TableRow
                    android:id="@+id/logo4"
                    android:layout_width="150dp"
                    android:layout_height="110dp"
                    android:background="@drawable/bordesuperior"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/logo_telefono" />
                </TableRow>
            </TableRow>
        </TableRow>

        <TableRow
            android:id="@+id/texto_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TableRow
                android:id="@+id/tercero"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:id="@+id/texto_entrega"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bordeinferior">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/comfortaa"
                        android:text="Entrega a domicilio"
                        android:textAlignment="center"
                        android:textSize="13sp" />
                </TableRow>
            </TableRow>

            <TableRow
                android:id="@+id/cuarto"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <TableRow
                    android:id="@+id/texto_solicitar"
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:background="@drawable/bordeinferior">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/comfortaa"
                        android:text="Solicitar asistencia"
                        android:textAlignment="center"
                        android:textSize="13sp" />
                </TableRow>
            </TableRow>
        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/titulo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@color/principal"
        android:backgroundTint="@color/principal"
        android:fontFamily="@font/comfortaa"
        android:gravity="center_vertical"
        android:text=" OptiSalud"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TableRow
        android:id="@+id/caja_menu"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="@color/base"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1">

        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />

        <TableRow
            android:id="@+id/logo_ajuste"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/base"
            android:gravity="center">

            <ImageView
                android:id="@+id/conf_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="ir_config"
                app:srcCompat="@drawable/logo_ajustes" />
        </TableRow>

        <TableRow
            android:id="@+id/logo_inicio"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/base"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/logo_inicio" />
        </TableRow>

        <TableRow
            android:id="@+id/logo_user"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/base"
            android:gravity="center"
            android:onClick="ir_user">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/logo_usuario" />
        </TableRow>

        <Space
            android:layout_width="50dp"
            android:layout_height="match_parent" />

    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>